{
  "name": "@streamerson/monorepo",
  "version": "0.0.1",
  "license": "LAMC",
  "scripts": {
    "clean": "./tools/cleanup.sh",
    "postclean": "yarn && yarn build",
    "build": "nx run-many -t build --all",
    "local-release": "./tools/release-local.sh",
    "build:clean": "yarn clean && yarn build",
    "test": "nx run-many -t test --all --exclude=state-machine",
    "docgen": "tsx ./tools/embed -w --summary",
    "start:redis": "docker compose up -d",
    "stop:redis": "docker compose down",
    "restart:redis": "docker compose restart",
    "release:core": "npm run build ** cd packages/core && npm version patch && cd ../../ && npm run build && cd ./dist/packages/core && npm run release",
    "prebenchmark": "yarn build",
    "benchmark": "tsx ./tools/run-benchmark.ts",
    "preloadtest": "yarn build",
    "loadtest": "tsx ./tools/run-load-test.ts",
    "release": "./tools/release.sh"
  },
  "private": true,
  "dependencies": {
    "colors": "^1.4.0",
    "lerna": "^7.3.1",
    "redis": "^4.7.0",
    "tsdoc-markdown": "^0.1.0",
    "yalc": "^1.0.0-pre.53"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "16.10.0",
    "@nx/js": "16.10.0",
    "@nx/linter": "16.10.0",
    "@nx/workspace": "16.10.0",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "doctoc": "^2.2.1",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "8.1.0",
    "nx": "16.10.0",
    "nx-cloud": "latest",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "tsx": "^4.6.2",
    "typescript": "~5.1.3",
    "verdaccio": "^5.0.4"
  },
  "nx": {
    "includedScripts": []
  },
  "workspaces": [
    "packages/*"
  ]
}
