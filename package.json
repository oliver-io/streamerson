{
  "name": "@streamerson/monorepo",
  "version": "0.0.1",
  "license": "LAMC",
  "scripts": {
    "clean": "lerna exec 'rm -rf node_modules' && nx reset && rm -rf dist && docker system prune --volumes -a && rm -rf node_modules && rm -rf tmp && yarn",
    "build": "nx run-many -t build --all --exclude=state-machine",
    "build:clean": "yarn clean && yarn build",
    "test": "nx run-many -t test --all --exclude=state-machine",
    "docgen": "tsx ./tools/embed -w --summary",
    "start:redis": "docker compose up -d",
    "stop:redis": "docker compose down -d",
    "restart:redis": "docker compose restart",
    "release:core": "cd packages/core && yarn version && cd ../../ && yarn build && cd ./dist/packages/core && yarn release",
    "prebenchmark": "yarn build",
    "benchmark": "tsx ./tools/run-benchmarks.ts --build"
  },
  "private": true,
  "dependencies": {
    "lerna": "^7.3.1"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "16.10.0",
    "@nx/js": "16.10.0",
    "@nx/linter": "16.10.0",
    "@nx/workspace": "16.10.0",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "doctoc": "^2.2.1",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "8.1.0",
    "nx": "16.10.0",
    "nx-cloud": "latest",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "typescript": "~5.1.3",
    "verdaccio": "^5.0.4"
  },
  "nx": {
    "includedScripts": []
  },
  "workspaces": [
    "packages/*"
  ]
}
