{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tmp"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "../core/tsconfig.lib.json"
    }
  ]
}
